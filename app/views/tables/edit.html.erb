<h1>Редактировать данные</h1>

<%= form_for :table, url: table_path(@table), method: :patch do |f| %>
	<% if @table.errors.any? %>
		<% @table.errors.full_messages.each do |msg| %>
		<div class="alert alert-danger"><%= msg %></div>
		<% end %>
		<% end %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>

	<p>
	<%= f.label :body %><br>
	<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>

	<p>
	<%= f.submit({:class => 'btn btn-primary', :value => 'Сохранить пост' }) %>
	</p>
<% end %>